<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:background="@android:color/background_light">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:padding="10dp" android:background="@drawable/ripple_bg">
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" style="?attr/textAppearanceListItem" android:textStyle="normal|bold"
                android:textAlignment="center" android:textSize="18sp" android:id="@+id/title"/>
        <TextView
                android:text="GoalContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:textSize="16sp" android:id="@+id/content"
                android:layout_marginBottom="10dp" android:layout_marginTop="10dp"/>
        <TextView
                android:text="2016-2-1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/createAt" android:textAlignment="viewEnd"/>
    </LinearLayout>
</android.support.v7.widget.CardView>