<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0E0E0">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="50dp">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp" android:layout_weight="1"
            app:cardBackgroundColor="?attr/colorPrimary" android:layout_marginBottom="1dp">
            <TextView
                android:text="@string/recommend"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/textView" android:layout_weight="1"
                android:textSize="24sp" android:textAlignment="center" android:gravity="center"/>
        </android.support.v7.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:dividerHeight="20dp"
            android:divider="@android:color/transparent"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:scrollbars="none"
            android:id="@+id/recommend_listView"/>
    </LinearLayout>
</RelativeLayout>