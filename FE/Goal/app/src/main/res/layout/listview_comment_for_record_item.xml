<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="30dp"
    android:paddingRight="8dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="28dp"
        android:layout_height="match_parent">
        <ImageButton
                android:id="@+id/commentuser_photo"
                android:background="@mipmap/ic_launcher"
                android:layout_width="25dp"
                android:layout_height="25dp" android:scaleType="fitCenter"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/user_reply"
                android:text="用户1"
                android:textSize="12dp"
                android:layout_marginRight="1dp"
                android:textColor="@color/ml_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="回复"
                android:textSize="12dp"
                android:layout_marginRight="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/user_replyed"
                android:text="用户1"
                android:textSize="12dp"
                android:textColor="@color/ml_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/content_of_comment"
                android:textSize="12dp"
                android:text="你真的好厉害啊！！！你真的好厉害啊！！！你真的好厉害啊！！！你真的好厉害啊！！！你真的好厉害啊！！！你真的好厉害啊！！！你真的好厉害啊！！！你真的好厉害啊！！！你真的好厉害啊！！！你真的好厉害啊！！！你真的好厉害啊！！！你真的好厉害啊！！！你真的好厉害啊！！！你真的好厉害啊！！！你真的好厉害啊！！！你真的好厉害啊！！！"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/time_of_sendcomment"
                android:textSize="8dp"
                android:text="2016年1月3日12:30"
                android:layout_marginBottom="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
