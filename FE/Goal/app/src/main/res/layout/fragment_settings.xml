<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp" android:background="?attr/colorPrimary">

        <ImageButton
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" app:srcCompat="@drawable/ic_arrow_back_black_24dp"
                android:background="@android:color/transparent"
                android:paddingEnd="10dp" android:paddingLeft="10dp"/>
        <TextView
                android:text="@string/setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/title" android:layout_centerInParent="true"
                android:textSize="16sp"/>
    </RelativeLayout>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" android:paddingBottom="15dp">
            <TextView
                    android:text="@string/account_setting"
                    android:layout_width="match_parent"
                    android:id="@+id/textView9"
                    android:paddingStart="15dp" android:paddingEnd="15dp" style="@style/ListTitleStyle"/>
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:id="@+id/account_safe"
                    android:background="@drawable/ripple_bg" android:paddingStart="15dp" android:paddingEnd="15dp"
                    style="@style/ListItemLayoutStyle">
                <TextView
                        android:layout_alignParentStart="true"
                        android:text="@string/account_safe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView10"
                        android:textColor="@android:color/background_dark"
                        android:textSize="16sp"/>
                <TextView
                        android:text="@string/prompt_account_setting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView12"
                        android:layout_below="@+id/textView10"/>
                <LinearLayout
                        android:orientation="vertical"
                        android:background="@color/divider"
                        style="@style/ListDividerStyle"
                        android:layout_width="match_parent">
                </LinearLayout>
            </RelativeLayout>
            <TextView
                    android:text="@string/about"
                    android:layout_width="match_parent"
                    android:id="@+id/textView13"
                    android:paddingStart="15dp" android:paddingEnd="15dp" style="@style/ListTitleStyle"/>
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:id="@+id/about" android:background="@drawable/ripple_bg"
                    android:paddingStart="15dp" android:paddingEnd="15dp" style="@style/ListItemLayoutStyle">
                <TextView
                        android:layout_centerVertical="true"
                        android:text="@string/about"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView14"
                        android:textColor="@android:color/background_dark"
                        android:textSize="16sp"/>
                <LinearLayout
                        android:orientation="vertical"
                        android:background="@color/divider"
                        style="@style/ListDividerStyle"
                        android:layout_width="match_parent">
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:id="@+id/feedback" android:background="@drawable/ripple_bg"
                    android:paddingStart="15dp" android:paddingEnd="15dp" style="@style/ListItemLayoutStyle">

                <TextView
                        android:text="@string/feedback"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView16"
                        android:layout_centerVertical="true" android:textColor="@android:color/background_dark"
                        android:textSize="16sp"/>
                <LinearLayout
                        android:orientation="vertical"
                        android:background="@color/divider"
                        style="@style/ListDividerStyle"
                        android:layout_width="match_parent">
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:paddingStart="15dp" android:paddingEnd="15dp"
                    android:background="@drawable/ripple_bg" android:id="@+id/logout"
                    style="@style/ListItemLayoutStyle">
                <TextView
                        android:text="@string/logout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView8"
                        android:textSize="16sp"
                        android:textColor="@color/colorAccent" android:layout_centerInParent="true"/>
                <LinearLayout
                        android:orientation="vertical"
                        android:background="@color/divider"
                        style="@style/ListDividerStyle"
                        android:layout_width="match_parent">
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>