<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.goal.goal.QuickStartCountTime">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:layout_height="36dp"
        >

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cardBackgroundColor="?attr/colorPrimary"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">
            <ImageButton
                android:id="@+id/comeback"
                android:layout_marginTop="8dp"
                android:background="@mipmap/comeback"
                android:layout_width="25dp"
                android:layout_height="25dp" />
            <View
                android:layout_width="80dp"
                android:layout_height="1dip"
                android:background="#696969" />
        </android.support.v7.widget.CardView>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <cn.goal.goal.TimeViewComm
            android:id="@+id/time1"
            android:layout_marginTop="211dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tvc_textSize="49sp"
            app:tvc_backgroundColor="@android:color/holo_green_dark"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/cancelCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quick_start_giveup"
            android:textSize="30sp"
            android:textColor="#ffffff"
            android:background="@android:color/holo_green_dark"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/time1"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</LinearLayout>
