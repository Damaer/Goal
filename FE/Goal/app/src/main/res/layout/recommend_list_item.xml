<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/background_light"
    android:orientation="horizontal"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">
        <ImageButton
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close_black_24dp"
            android:background="@android:color/transparent"
            android:layout_alignParentEnd="true"
            android:padding="5dp"/>
        <ImageView
            android:id="@+id/portrait_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:layout_below="@id/cancel_button"
            android:layout_alignParentStart="true"
            android:layout_margin="15dp"/>
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nicheng"
            android:textSize="25sp"
            android:textColor="@android:color/black"
            android:layout_below="@id/cancel_button"
            android:layout_toRightOf="@id/portrait_img" />
        <TextView
            android:id="@+id/follow_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="336人关注"
            android:layout_below="@id/name"
            android:layout_toRightOf="@id/portrait_img"/>
        <Button
            android:id="@+id/follow_button"
            android:layout_width="72dp"
            android:layout_height="36dp"
            android:text="关注"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:background="#66BB6A"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@id/follow_number"
            android:layout_marginEnd="20dp"/>
        <Button
            android:id="@+id/follow_add_button"
            android:layout_width="24dp"
            android:layout_height="36dp"
            android:drawableStart="@drawable/ic_add_white_24dp"
            android:background="#66BB6A"
            android:layout_toStartOf="@id/follow_button"
            android:layout_alignBottom="@id/follow_number"/>
        <TextView
            android:id="@+id/share_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/test_text"
            android:textColor="@android:color/black"
            android:layout_below="@id/follow_number"
            android:layout_toRightOf="@id/portrait_img"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_alignRight="@id/follow_button"/>
        <TextView
            android:id="@+id/from_goal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="来自blabla的目标"
            android:layout_below="@id/share_text"
            android:layout_toRightOf="@id/portrait_img"/>
        <TextView
            android:id="@+id/share_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="225"
            android:layout_below="@id/share_text"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"/>
        <ImageButton
            android:id="@+id/share_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/share2"
            android:background="@android:color/transparent"
            android:layout_below="@id/share_text"
            android:layout_toStartOf="@id/share_number"
            android:layout_alignBottom="@id/share_number"
            android:layout_marginEnd="5dp" />
        <TextView
            android:id="@+id/like_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="58"
            android:layout_below="@id/share_text"
            android:layout_toStartOf="@id/share_button"
            android:layout_marginEnd="10dp"/>
        <ImageButton
            android:id="@+id/like_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/like"
            android:background="@android:color/transparent"
            android:layout_below="@id/share_text"
            android:layout_toStartOf="@id/like_number"
            android:layout_alignBottom="@id/like_number"
            android:layout_marginEnd="5dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>