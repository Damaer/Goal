<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/background_light"
    android:orientation="horizontal"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">
        <!--<ImageButton-->
            <!--android:id="@+id/cancel_button"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:src="@drawable/ic_close_black_24dp"-->
            <!--android:background="@android:color/transparent"-->
            <!--android:layout_alignParentEnd="true"-->
            <!--android:paddingTop="5dp"-->
            <!--android:paddingEnd="5dp"/>-->
        <ImageView
            android:id="@+id/portrait_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nicheng"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_toRightOf="@id/portrait_img"
            android:layout_alignEnd="@+id/from_goal"
            android:layout_marginTop="15dp"
            android:paddingBottom="5dp"/>
        <TextView
            android:id="@+id/share_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-2-22"
            android:layout_below="@id/name"
            android:layout_toRightOf="@id/portrait_img"/>

        <!--<Button-->
            <!--android:id="@+id/follow_add_button"-->
            <!--android:layout_width="24dp"-->
            <!--android:layout_height="24dp"-->
            <!--android:drawableStart="@drawable/ic_add_white_24dp"-->
            <!--android:background="#66BB6A"-->
            <!--android:layout_toStartOf="@id/follow_button"-->
            <!--android:layout_alignBottom="@id/follow_number"-->
            <!--android:layout_marginBottom="10dp"/>-->
        <TextView
            android:id="@+id/share_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/test_text"
            android:textColor="@android:color/black"
            android:layout_below="@id/share_time"
            android:layout_toRightOf="@id/portrait_img"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"/>
        <TextView
            android:id="@+id/from_goal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="来自blabla的目标"
            android:layout_below="@id/share_text"
            android:layout_toRightOf="@id/portrait_img"/>

        <ImageButton
            android:id="@+id/share_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/share2"
            android:background="@android:color/transparent"
            android:layout_below="@id/share_text"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="40dp" />
        <ImageButton
            android:id="@+id/like_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/like"
            android:background="@android:color/transparent"
            android:layout_below="@id/share_text"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@id/share_button"/>

        <Button
            android:id="@+id/follow_button"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:text="关注"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:background="#66BB6A"
            android:padding="5dp"
            android:layout_alignTop="@+id/name"
            android:layout_alignStart="@+id/like_button"
            android:layout_alignEnd="@+id/share_button"
            android:layout_alignBottom="@+id/name" />
    </RelativeLayout>
</android.support.v7.widget.CardView>