<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_agreement"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/side_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="65dp">
        <View
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lintpurple" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="43dp">
            <ImageButton
                android:id="@+id/comeback_from_word"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_comeback"
                android:layout_width="26dp"
                android:layout_height="26dp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text="一句话开启你的美好一天"
                    android:layout_centerInParent="true"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <ImageButton
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_share"
                    android:layout_width="26dp"
                    android:layout_height="26dp" />
            </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/lintpurple" />
    </LinearLayout>
    <FrameLayout
        android:id="@+id/card_main_container"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <include layout="@layout/activity_card_back"/>
        <include layout="@layout/activity_card_front"/>
    </FrameLayout>
</LinearLayout>
