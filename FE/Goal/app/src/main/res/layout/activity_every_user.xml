<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_every_user"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.goal.goal.EveryUserActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageButton
            android:id="@+id/comeback_from_user"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:background="@mipmap/comeback"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <TextView
            android:id="@+id/userName"
            android:text="用户名称"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageButton
            android:id="@+id/setting_for_user"
            android:layout_marginRight="8dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@mipmap/setting_for_user"
            android:layout_width="20dp"
            android:layout_height="20dp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#696969" />
    <ScrollView
        android:id="@+id/scrollview_for_user"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="128dp">
            <ImageView
                android:id="@+id/user_head_photo"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:background="@mipmap/headphoto"
                android:layout_width="80dp"
                android:layout_height="80dp" />
            <TextView
                android:id="@+id/word_of_user"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="6dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="10dp"
                android:textColor="@color/ml_gray"
                android:text="向目标前进,每天进步一点点。"
                android:layout_width="match_parent"
                android:layout_height="16dp" />
            <LinearLayout
                android:gravity="center"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginRight="8dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="专注时长"
                        android:gravity="center"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/time_attention"
                        android:text="1小时20分钟"
                        android:textSize="10dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginRight="8dp"
                    android:orientation="vertical"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="目标"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/sum_goal"
                        android:text="3个"
                        android:gravity="center"
                        android:textSize="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginRight="8dp"
                    android:layout_centerHorizontal="true"
                    android:orientation="vertical"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="关注她"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/payattention_to_her"
                        android:text="5个"
                        android:textSize="10dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="#DCDCDC" />
            <cn.goal.goal.utils.MylistView_for_goal
                android:id="@+id/listview_of_user_goal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </cn.goal.goal.utils.MylistView_for_goal>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
